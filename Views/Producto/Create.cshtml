@model App.Models.Producto
@using Microsoft.AspNetCore.Mvc.Rendering

<h2>Crear Producto</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Nombre:</label>
        <input asp-for="Nombre" />
        <span asp-validation-for="Nombre" style="color:red"></span>
    </div>

    <div>
        <label>Categor√≠a:</label>
<select asp-for="CodigoCategoria" asp-items="@(ViewData["Categorias"] as IEnumerable<SelectListItem>)"></select>
        <span asp-validation-for="CodigoCategoria" style="color:red"></span>
    </div>

    <button type="submit">Guardar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
