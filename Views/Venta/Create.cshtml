@model App.Models.Venta
@using Microsoft.AspNetCore.Mvc.Rendering

<h2>Crear Venta</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Producto:</label>
<select asp-for="CodigoProducto" asp-items="@(ViewData["Productos"] as IEnumerable<SelectListItem>)"></select>
        <span asp-validation-for="CodigoProducto" style="color:red"></span>
    </div>

    <div>
        <label>Fecha:</label>
        <input asp-for="Fecha" type="date" />
        <span asp-validation-for="Fecha" style="color:red"></span>
    </div>

    <button type="submit">Guardar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
